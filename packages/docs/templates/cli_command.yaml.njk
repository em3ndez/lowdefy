id: command_box_{{ id }}
type: Box
style:
  # padding: 60px
  backgroundColor: '#f7f7f7'
  borderColor: '#c1c8cc'
  borderStyle: solid
  borderWidth: 1px

blocks:
  - id: command_run_{{ id }}
    type: Paragraph
    layout:
      flex: 0 1 auto
    style:
      marginRight: 6px
      marginLeft: 16px
      marginTop: 16px
    properties:
      content: '$'
  - id: command_{{ id }}
    type: Paragraph
    layout:
      flex: 0 1 auto
    # style:
      # backgroundColor: '#ffffff'
    properties:
      style:
        marginTop: 16px
      code: true
      copyable:
        icon: AiOutlineCopy
        tooltips:
          - Click to copy
          - Copied. Paste in console to run ðŸš€
      content:
        _var: command
