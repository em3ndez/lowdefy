methods:
  _var: methods
page:
  _ref:
    path: templates/general.yaml.njk
    vars:
      pageId:
        _var: pageId
      pageTitle:
        _var: pageTitle
      section: Operators
      content:
        - id: warning
          type: Alert
          visible:
            _not:
              _not:
                _var: warning
          properties:
            message:
              _var: warning
            type: warning
        - id: environment
          type: Alert
          visible:
            _not:
              _not:
                _var: env
          properties:
            message:
              _string.concat:
                - 'Environment: '
                - _var: env
            type: info
        {% if experimental %}
        - id: experimental
          type: Alert
          properties:
            message: 'This operator is experimental and may change in future versions.'
            type: warning
        {% endif %}
        - id: types
          type: Markdown
          style:
            '.markdown-body':
              fontSize: 14px
          properties:
            content:
              _var: types
        - id: description
          type: MarkdownWithCode
          properties:
            content:
              _var: description
        {% if build %}
        - id: build_operator
          type: Markdown
          properties:
            content: |
              > This operator can be used as a [`_build`](/_build) operator method.
        {% endif %}
        {% if arguments %}
        - id: arguments_title
          type: Markdown
          properties:
            content: '#### Arguments'
        - id: arguments
          type: MarkdownWithCode
          properties:
            content:
              _var: arguments
        {% endif %}
        {% if examples %}
        - id: examples_title
          type: Markdown
          properties:
            content: '#### Examples'
        - id: examples
          type: MarkdownWithCode
          properties:
            content:
              _var: examples
        {% endif %}
