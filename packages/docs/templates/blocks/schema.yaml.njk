id: schema_definition
type: Box
layout:
  contentGutter: 16
blocks:
  - id: schema_divider_start
    type: Divider
    properties:
      title: '{{ block_type }} JSON Schema Definition'
  - id: schema_yaml
    type: MarkdownWithCode
    properties:
      content:
        _nunjucks:
          template: |
            {% raw %}
            ```yaml
            type: object
            properties:
              {{ schema | safe | indent(2) }}
            ```
            {% endraw %}
          on:
            schema:
              _yaml.stringify:
                - _var: schema_definition
  - id: schema_divider_end
    type: Divider
