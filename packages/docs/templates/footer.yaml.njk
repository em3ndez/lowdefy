{% if not hideFeedback %}
- id: feedback_divider
  type: Divider
- id: feedback_title
  type: Title
  visible:
    _not:
      _state: feedback_sent
  style:
    textAlign: center
  properties:
    content: Was this helpful?
    level: 3
- id: feedback_rating_box
  type: Box
  style:
    margin: auto
  layout:
    size: 300
  areas:
    content:
      justify: space-around
      align: middle
      blocks:
        - id: feedback_box
          type: Box
          layout:
            contentGutter: 16
            contentJustify: space-around
            contentAlign: middle
          visible:
            _not:
              _state: feedback_sent
          blocks:
            - id: cry_box
              type: Box
              layout:
                size: auto
              style:
                fontSize:
                  _if:
                    test:
                      _eq:
                        - _state: feedback.score
                        - 0
                    then: 48
                    else: 32
              properties:
                content: 😭
              events:
                onClick:
                  - id: resize
                    type: SetState
                    params:
                      feedback.score: 0
            - id: sad_box
              type: Box
              visible:
                _not:
                  _state: feedback_sent
              layout:
                size: auto
              style:
                fontSize:
                  _if:
                    test:
                      _eq:
                        - _state: feedback.score
                        - 0.333
                    then: 48
                    else: 32
              properties:
                content: 😟
              events:
                onClick:
                  - id: resize
                    type: SetState
                    params:
                      feedback.score: 0.333
            - id: smile_box
              type: Box
              visible:
                _not:
                  _state: feedback_sent
              layout:
                size: auto
              style:
                fontSize:
                  _if:
                    test:
                      _eq:
                        - _state: feedback.score
                        - 0.666
                    then: 48
                    else: 32
              properties:
                content: 😊
              events:
                onClick:
                  - id: resize
                    type: SetState
                    params:
                      feedback.score: 0.666
            - id: happy_box
              type: Box
              visible:
                _not:
                  _state: feedback_sent
              layout:
                size: auto
              style:
                fontSize:
                  _if:
                    test:
                      _eq:
                        - _state: feedback.score
                        - 1
                    then: 48
                    else: 32
              properties:
                content: 😀
              events:
                onClick:
                  - id: resize
                    type: SetState
                    params:
                      feedback.score: 1
            - id: feedback_input
              type: Box
              visible:
                _ne:
                  - _state: feedback.score
                  - null
              layout:
                contentGutter: 16
                contentJustify: space-around
                contentAlign: middle
              blocks:
                - id: feedback.email
                  type: TextInput
                  validate:
                    _ref: templates/validate_email.yaml
                  properties:
                    title: Email
                    placeholder: Your email address
                - id: feedback.text
                  type: TextArea
                  properties:
                    title: Feedback
                    rows: 5
                    placeholder:
                      _if:
                        test:
                          _or:
                            - _eq:
                                - _state: feedback.score
                                - 0.666
                            - _eq:
                                - _state: feedback.score
                                - 1
                        then: What made you smile?
                        else: How can we improve?
                - id: fb_box
                  type: Box
                  layout:
                    contentJustify: end
                  blocks:
                    - id: feedback.send
                      type: Button
                      requests:
                        - _ref: requests/insert_feedback.yaml
                        - _ref:
                            path: requests/discord_message.yaml.njk
                            vars:
                              key: feedback
                              message:
                                  _nunjucks:
                                    template: |
                                      {% raw %}
                                      Docs feedback: {{ feedback.score }} - {{ feedback.text }}
                                      {% endraw %}
                                    on:
                                        feedback:
                                          _state: feedback
                      layout:
                        size: auto
                      properties:
                        title: Send
                        icon: AiOutlineSend
                        color: '#1990FF'
                      events:
                        onClick:
                          - id: validate
                            type: Validate
                            params:
                              regex: ^feedback
                          - id: post_data
                            type: Request
                            params:
                              - insert_feedback
                              - discord_message_feedback
                          - id: set_feedback
                            type: SetState
                            params:
                              feedback_sent: true
        - id: feedback_sent_thank_you
          type: Alert
          visible:
            _not:
              _not:
                _state: feedback_sent
          properties:
            message: Thank you! You feedback help us make things better ✨
            type: success
{% if filePath %}
- id: edit_on_gh_box
  type: Box
  style:
    lg:
      paddingRight: 40
  layout:
    contentJustify: end
  blocks:
