          type: Title
          visible:
            _not:
              _global: newsletter_subscribed
          style:
            textAlign: center
          properties:
            content: Subscribe to our newsletter
            level: 3
            color: '#1990FF'
        - id: footer_cta_paragraph
          type: Paragraph
          visible:
            _not:
              _global: newsletter_subscribed
          style:
            textAlign: center
          properties:
            content: Receive the latest Lowdefy updates in your inbox.
        - id: footer_cta_box
          type: Box
          layout:
            contentGutter: [12, 0]
            contentJustify: center
          blocks:
            - id: email
              type: TextInput
              visible:
                _not:
                  _global: newsletter_subscribed
              layout:
                flex: 0 1 250px
              validate:
                _ref: templates/validate_email.yaml
              properties:
                size: large
                placeholder: Enter your email
                label:
                  disabled: true
            - id: footer_cta_button
              type: Button
              visible:
                _not:
                  _global: newsletter_subscribed
              requests:
                - _ref: requests/insert_newsletter.yaml
                - _ref:
                    path: requests/discord_message.yaml.njk
                    vars:
                      key: newsletter
                      message: 'New newsletter subscription from docs'
              layout:
                flex: 0 1 auto
              properties:
                title: Subscribe
                size: large
              events:
                onClick:
                  - id: validate
                    type: Validate
                    params: email
                  - id: post_data
                    type: Request
                    params:
                      - insert_newsletter
                      - discord_message_newsletter
                    messages:
                      success: Thanks for subscribing!
                  - id: set_subscribed
                    type: SetGlobal
                    params:
                      newsletter_subscribed: true
            - id: subscribed_thank_you
              type: Alert
              layout:
                flex: 0 1 350px
              visible:
                _not:
                  _not:
                    _global: newsletter_subscribed
              properties:
                message: Thanks! 👏  We'll keep you updated with the latest Lowdefy news.
                type: success
